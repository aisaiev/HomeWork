<Window x:Class="ZzaDashboard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:ZzaDashboard"
        xmlns:data="clr-namespace:Zza.Data;assembly=Zza.Data"
        xmlns:Views="clr-namespace:ZzaDashboard.Views"
        xmlns:ViewModels="clr-namespace:ZzaDashboard.ViewModels"
        Title="MainWindow" Height="400" Width="800">
    <Window.DataContext>
        <ViewModels:CustomersViewModel></ViewModels:CustomersViewModel>
    </Window.DataContext>
    <Window.Resources>
        <DataTemplate x:Key="CustomerEditViewTemplate" DataType="{x:Type data:Customer}">
            <Views:CustomerEditView></Views:CustomerEditView>
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <ListView Grid.Column="0" Grid.Row="0" ItemsSource="{Binding Customers}" ItemTemplate="{StaticResource CustomerEditViewTemplate}"></ListView>
        <!--<Views:CustomerEditView></Views:CustomerEditView>-->
    </Grid>
</Window>

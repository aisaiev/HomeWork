        </Button>
        <Button Grid.Column="0" Grid.Row="2" Margin="1" Background="#F4F4F4" BorderBrush="#F4F4F4">
            <Button.Content>
                <TextBlock Text="1/x" Typography.Fraction="Slashed" FontFamily="Times New Roman" FontStyle="Italic" ></TextBlock>
            </Button.Content>
        </Button>
        <Button Grid.Column="1" Grid.Row="2" Margin="1" Background="#F4F4F4" BorderBrush="#F4F4F4">
            <Button.Content>
                <StackPanel Orientation="Horizontal">
                    <TextBlock FontFamily="Times New Roman" FontStyle="Italic" >x</TextBlock>
                    <TextBlock>
                        <Run BaselineAlignment="Superscript" FontSize="10">2</Run>
                    </TextBlock>
                </StackPanel>
            </Button.Content>
        </Button>
        <Button Grid.Column="2" Grid.Row="2" Margin="1" Background="#F4F4F4" BorderBrush="#F4F4F4">
            <Button.Content>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="√" ></TextBlock>
                    <TextBlock Text="x"  FontFamily="Times New Roman" FontStyle="Italic" Margin="0, 3, 0, 0"></TextBlock>
                </StackPanel>
            </Button.Content>
        </Button>
        <Button Grid.Column="3" Grid.Row="2" Content="÷"  Margin="1" Background="#F4F4F4" BorderBrush="#F4F4F4"></Button>
        <Button Grid.Column="3" Grid.Row="3" Content="×"  Margin="1"  Background="#F4F4F4" BorderBrush="#F4F4F4"></Button>
        <Button Grid.Column="3" Grid.Row="4" Content="－"  Margin="1" Background="#F4F4F4" BorderBrush="#F4F4F4"></Button>

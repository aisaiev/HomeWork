        <Button Grid.Column="1" Grid.Row="6" Content="0"  Margin="1" Background="#FBFBFB" BorderBrush="#FBFBFB"></Button>
        <Button Grid.Column="2" Grid.Row="6" Content="."  Margin="1" Background="#FBFBFB" BorderBrush="#FBFBFB"></Button>
    </Grid>

        <Button Grid.Column="1" Grid.Row="3" Content="8"  Margin="1" Background="#FBFBFB" BorderBrush="#FBFBFB"></Button>
        <Button Grid.Column="2" Grid.Row="3" Content="9"  Margin="1" Background="#FBFBFB" BorderBrush="#FBFBFB"></Button>
